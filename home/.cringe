#LFS mkinitcpio.conf for my laptop
MODULES=(radeon i2c_hid btrfs usbhid xhci_hcd)
BINARIES=(bash micro neofetch tmux e2fsck cryptsetup)
HOOKS=(base udev autodetect modconf block encrypt keyboard keymap lvm2 resume filesystems btrfs fsck consolefont)
COMPRESSION="zstd"

#Linux parameters for my laptop
GRUB_CMDLINE_LINUX_DEFAULT="loglevel=4 radeon.modeset=1 sysrq_always_enabled=1 binder.devices=binder,hwbinder,vndbinder,anbox-binder,anbox-hwbinder,anbox-vndbinder zram.num_devices=10 pci=noaer raid=noautodetect tsc=unstable trace_clock=local acpi_backlight=video psi=1 apparmor=1 security=apparmor"

#QT_QPA_PLATFORM=xcb      - Xwayland

export MANGOHUD_CONFIG=legacy_layout=false,gpu_stats,gpu_temp,gpu_core_clock,gpu_mem_clock,gpu_power,gpu_load_change,gpu_text=GPU,cpu_stats,cpu_temp,core_load,cpu_power,cpu_mhz,cpu_load_change,core_load_change,cpu_color=2e97cb,cpu_text=CPU,io_stats,io_read,io_write,io_color=a491d3,swap,vram,vram_color=ad64c1,ram,ram_color=c26693,fps,engine_version,engine_color=eb5b5b,gpu_name,gpu_color=2e9762,vulkan_driver,arch,wine,wine_color=eb5b5b,frame_timing=1,frametime_color=00ff00,resolution,vkbasalt,gamemode,battery,exec=echo,exec=echo,exec=echo,"exec=printf x11",media_player_color=ffffff,time,background_alpha=0.4,font_size=24,background_color=020202,position=top-left,text_color=ffffff,toggle_hud=Shift_R+F12
